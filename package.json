{
  "name": "maskmeister",
  "displayName": "MaskMeister",
  "description": "Mask my code",
  "icon": "images/maskmeister.png",
  "version": "0.0.5",
  "publisher": "MaskMeister",
  "author": {
    "name": "Henrik RÃ¶schmann",
    "email": "henrik.roschmann@gmail.com",
    "url": "https://github.com/henrikroschmann"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/henrikroschmann/MaskMeister"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:maskmeister.maskCode",
    "onCommand:maskmeister.unmaskCode",
    "onCommand:maskmeister.editKeywords"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "maskmeister.keywordsFilePath": {
        "type": "string",
        "default": "keywords.json",
        "description": "The path to the keywords file to use for masking/unmasking."
      }
    },
    "commands": [
      {
        "command": "maskmeister.maskCode",
        "title": "Mask Code"
      },
      {
        "command": "maskmeister.unmaskCode",
        "title": "Unmask Code"
      },
      {
        "command": "maskmeister.editKeywords",
        "title": "Edit Masked Code Keywords"
      }
    ],
    "codeActions": [
      {
        "languages": [
          "*"
        ],
        "title": "Mask Code",
        "command": {
          "command": "maskmeister.maskCode",
          "title": "Mask Code"
        },
        "kind": "quickfix"
      },
      {
        "languages": [
          "*"
        ],
        "title": "Unmask Code",
        "command": {
          "command": "maskmeister.unmaskCode",
          "title": "Unmask Code"
        },
        "kind": "quickfix"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.2.3"
  }
}
